<!DOCTYPE html>
<html>
  <head>
    <title>SambaFm</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="leftnav">
        <ul class="nav-main pull-right">
          <li><%= link_to "Home", root_path, id: "logo", class: "nav home-nav" %></li>
          <li><%= link_to "Blogs", blogs_path, class:"nav blogs-nav" %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Library", library_user_path(current_user), id: "library_link", class: "nav library-nav" %> </li>
            <li><%= link_to "MyStream", stream_user_path(current_user), id: "stream_link", class: "nav stream-nav" %></li>
            <li class="blogs"><%= link_to "MyBlogs", blogs_user_path(current_user)%>
            <ul class="subnav">
              <%= render partial: 'blogs/list', locals: { blogs: current_user.followed_blogs }%>
            </ul>
            </li>
            <li>
            <%= link_to "MyPlaylists",  playlists_user_path(current_user), id: "playlists_link", class:" nav playlists-nav" %>
            <ul class="subnav">
              <%= render current_user.playlists %>
              <li id="create_playlist">
              <%= render 'playlists/new_playlist_form' %>
              </li>
            </ul>
            </li>
          <% end %>
        </ul>
      </div>
      <div class = "songs_table">
        <% flash.each do |k, v| %>
          <div class="flash <%= k %>"><%= v %></div>
        <% end %>
        <%= yield %>
      </div>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
