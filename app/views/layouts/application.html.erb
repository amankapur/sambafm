<!DOCTYPE html>
<html>
  <head>
    <title>SambaFm</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <section class="round">
      <% flash.each do |k, v| %>
        <div class="flash <%= k %>"><%= v %></div>
      <% end %>
      <%= yield %>
      </section>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
