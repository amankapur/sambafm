<div class="blog">
  <a href="<%= blog_path(blog) %>">
    <div class="blog_image">
      <% if blog.image_url %>
        <%= image_tag blog.image_url, size: "300x200", alt: blog.name %>
      <% else %>
        <span><%= blog.name %></span>
      <% end %>
      <%= render partial: 'shared/follow_form', locals: { blog: blog }%>
    </div>
  </a>
</div>
